
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_layout_display.cshtml";
}

	<!-- MAIN-CONTENT-SECTION START -->
<section class="main-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <!-- BSTORE-BREADCRUMB START -->
                <div class="bstore-breadcrumb">
                    <a href="@Url.Action("TrangChu","Display")">Trang Chủ<span><i class="fa fa-caret-right"></i> </span> </a>
                    <span> <i class="fa fa-caret-right"> </i> </span>
                    <a href="shop-gird.html"> @Model.TENLOAI </a>
                    <span> @Model.TEN_SANPHAM </span>
                </div>
                <!-- BSTORE-BREADCRUMB END -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <!-- SINGLE-PRODUCT-DESCRIPTION START -->
                <div class="row">
                    <div class="col-lg-5 col-md-5 col-sm-4 col-xs-12">
                        <div class="single-product-view">
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="tab-pane active" id="thumbnail_1">
                                    <div class="single-product-image">
                                        <img src="~/Content/image/@Model.ANHBIA" alt="single-product-image" />
                                        <a class="new-mark-box" href="#">new</a>
                                        <a class="fancybox" href="~/Content/image/@Model.ANHBIA" data-fancybox-group="gallery"><span class="btn large-btn">Xem ảnh <i class="fa fa-search-plus"></i></span></a>
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                      
                    </div>
                    <div class="col-lg-7 col-md-7 col-sm-8 col-xs-12">
                        <div class="single-product-descirption">
                            <h2>@Model.TEN_SANPHAM</h2>
                            
                            <div class="single-product-review-box">
                                <div class="rating-box">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star-half-empty"></i>
                                </div>
                                <div class="read-reviews">
                                    <a href="#"></a>
                                </div>
                                <div class="write-review">
                                    <a href="#"></a>
                                </div>	
                               
                            </div>
                            <div class="single-product-condition">
                                <p>Sản phẩm: <span>Chính hãng</span></p>                               
                                <p>Tình trạng: <span> Mới 100%</span></p>
                            </div>
                            <div class="single-product-price">
                             
                                <h2>@String.Format("{0:0,0}", @Model.DONGIA) VNĐ</h2>
                            </div>
                            <div class="single-product-desc">
                                <p>@Model.MOTA</p>                             
                            </div>
                            <div class="single-product-info">
                                <a href="#"><i class="fa fa-envelope"></i></a>
                                <a href="#"><i class="fa fa-print"></i></a>
                                <a href="#"><i class="fa fa-heart"></i></a>
                            </div>
                           
                           
                            <div class="single-product-add-cart">
                                <a class="add-cart-text" title="Add to cart" href="@Url.Action("ThemGioHang", "GioHang", new { @sID_SANPHAM = @Model.ID_SANPHAM, @sURL = Request.Url.ToString()})">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- SINGLE-PRODUCT-DESCRIPTION END -->

                <!-- RELATED-PRODUCTS-AREA START -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="left-title-area">
                            <h2 class="left-title">Sản phẩm bán chạy</h2>
                        </div>
                    </div>
                    <div class="related-product-area featured-products-area">
                        <div class="col-sm-12">
                            <div class=" row">
                                <!-- RELATED-CAROUSEL START -->
                                <div class="related-product">
                                    <!-- SINGLE-PRODUCT-ITEM START -->                                   
                                       @Html.Action("BanChay", "Display")
                                    <!-- SINGLE-PRODUCT-ITEM END -->
                              
                                </div>
                                <!-- RELATED-CAROUSEL END -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- RELATED-PRODUCTS-AREA END -->
            </div>
            <!-- RIGHT SIDE BAR START -->
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <!-- SINGLE SIDE BAR START -->
                @Html.Action("pdLienQuan","Display")
                <!-- SINGLE SIDE BAR END -->

                <!-- SINGLE SIDE BAR START -->
                <div class="single-product-right-sidebar">
                    <div class="slider-right zoom-img">
                        <a href="#">
                            <img src="~/Content/image/slideshow3.jpg" width="262" height="430"/>
                            </a>
                    </div>
                </div>
            </div>
            <!-- SINGLE SIDE BAR END -->
        </div>
    </div>
</section>
<!-- MAIN-CONTENT-SECTION END -->

