
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_layout_display.cshtml";
}
<style>
    .dn{
        width:400px;
        margin:auto;
        margin-top:100px
    }
    .dn h3{
        text-align:center
    }
   
    .dn label{
        margin-left:45px
    }
    .submit-button{
        text-align:center;
    }
    .forget-password{
        text-align:center
    }
    .main-btn {
        padding: 15px;
        border-radius: 10px;
        text-align: center;
    }
    .loi {
        float: left;
        padding: 8px 5px;
        font-size: 20px;
        color: red;
    }

    .input-feild {
        float: left; margin-left:45px;
    }
</style>
<div class="primari-box registered-account dn">
    <form class="new-account-box" id="accountLogin" method="post" action="#">
        <h3 class="box-subheading">Đăng nhập</h3>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)   
            <div class="form-content">
            <div class="form-group primary-form-group">
                <label for="loginemail">Tài khoản</label>
                @*<input type="text" value="" name="email" id="loginemail" class="">*@
                @Html.TextBox("TenDN", null, new { @class = "form-control input-feild" })
               <span class="loi">@ViewData["Loi1"]</span>
            </div>
            <div class="form-group primary-form-group">
                <label for="password">Mật khẩu</label>
                @*<input type="password" value="" name="password" id="password" class="form-control input-feild">*@
                @Html.Password("MatKhau", null, new { @class = "form-control input-feild" })
                <span class="loi">@ViewData["Loi2"]</span>
            </div>
            <div class="forget-password">
                <p><a href="@Url.Action("DangKy","NguoiDung")">Chưa có tài khoản? Đăng ký</a></p>
            </div>
            <div>
                <h4 style="color:red;text-align:center">@ViewBag.Thongbao</h4>
            </div>

                <div class="submit-button">
                 
                   <input type="submit" value="Đăng nhập" id="signinCreate" class="btn main-btn" />

                </div>

         
        </div> 
          
        }
     
    </form>
  @if (ViewBag.Mess != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@Html.Raw(ViewBag.Mess)");
                
            };
    </script>
}
   
 

</div>

